<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/login_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/bar" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_tab"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/xlarge"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/r_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/phone"
                android:gravity="center"
                android:hint="Phone Number (as account)" />

            <EditText
                android:id="@+id/r_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user"
                android:gravity="center"
                android:hint="Name" />

            <EditText
                android:id="@+id/r_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lock"
                android:gravity="center"
                android:hint="Password"
                android:password="true" />

            <EditText
                android:id="@+id/r_r_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lock"
                android:gravity="center"
                android:hint="Repeat Password"
                android:password="true" />

            <EditText
                android:id="@+id/r_r_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pacman"
                android:gravity="center"
                android:hint="Age" />

            <EditText
                android:id="@+id/r_blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/heart"
                android:gravity="center"
                android:hint="Blood (Optional)" />

            
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />
                </RadioGroup>

            <EditText
                android:id="@+id/r_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/eye"
                android:gravity="center"
                android:hint="Allergies (Optional)" />

            <EditText
                android:id="@+id/r_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/eye"
                android:gravity="center"
                android:hint="Address (Optional)" />


            <Button
                android:id="@+id/r_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>